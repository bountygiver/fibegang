<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:background="#272727">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"

        android:layout_alignParentTop="true"
        android:textColor="#47C770"
        android:textSize="23dp"
        android:lineSpacingExtra="15dp"
        android:layout_centerInParent="true"

        android:text="Question:"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"

        android:layout_below="@id/textView1"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:lineSpacingExtra="4dp"
        android:layout_centerInParent="true"

        android:text="@string/clickerQuestion"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"

        android:textColor="#47C770"
        android:textSize="23dp"

        android:text="Options:"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button style="@style/clickerOption"
        android:id="@+id/optionA"
        android:layout_below="@id/textView3"

        android:text="@string/optionA"/>

    <Button style="@style/clickerOption"
        android:id="@+id/optionB"

        android:text="@string/optionB"
        android:layout_below="@+id/optionA"
        android:layout_alignParentStart="true"/>

    <Button style="@style/clickerOption"
        android:id="@+id/optionC"

        android:text="@string/optionC"
        android:layout_below="@+id/optionB"
        android:layout_alignParentStart="true"/>

    <Button style="@style/clickerOption"
        android:id="@+id/optionD"

        android:text="@string/optionD"
        android:layout_below="@+id/optionC"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/queueButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#47C770"

        android:text="Submit"
        android:textColor="#ffffff"/>
    </RelativeLayout>
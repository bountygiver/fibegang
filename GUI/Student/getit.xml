<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:background="#272727">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="bottom|center"

        android:layout_alignParentTop="true"
        android:textColor="#47C770"
        android:textSize="23dp"
        android:lineSpacingExtra="4dp"
        android:layout_centerInParent="true"

        android:text="Do you get it?"/>


    <Button
        android:id="@+id/queueButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal|center"

        android:background="#47C770"

        android:text="@string/getIt"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_marginLeft="61dp"
        android:layout_alignTop="@+id/queueButton2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/queueButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal|center"

        android:background="#EA3F45"
        android:text="@string/dontGetIt"
        android:textSize="40dp"

        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/queueButton"
        android:layout_marginLeft="36dp" />
</RelativeLayout>
